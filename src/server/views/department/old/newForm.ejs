<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <!-- IMPORTANT #1 Start -->
    <script src="/auth/js/getAuthUserInfo.js"></script>
    <script src="/department/js/newForm.js"></script>
    <!-- IMPORTANT #1 End -->
  </head>
  <body class="container p-5 d-flex justify-content-center align-items-center">
    <main class="container w-50">
      <div class="container">
        <h1>Create Form</h1>
        <!-- IMPORTANT #2 Start -->
        <h1 id="event-id" style="display: none"><%= event._id %></h1>
        <h1 id="department-id" style="display: none"><%= department._id %></h1>
        <!-- IMPORTANT #2 End -->
      </div>
      <!-- IMPORTANT #4 Start (form MUST have id="main-form") -->
      <form action="" id="main-form" method="post">
        <!-- IMPORTANT #4 End -->
        <div class="form-floating">
          <!-- IMPORTANT #3 Start -->
          <input type="hidden" name="eventId" value="<%= event._id %>" />
          <input
            type="hidden"
            name="departmentId"
            value="<%= department._id %>"
          />
          <!-- IMPORTANT #3 End -->
          <input
            type="text"
            name="name"
            id="input-name"
            class="form-control"
            placeholder="Form Name"
            required
          />
          <label for="input-name" class="form-label">Form Name</label>
        </div>

        <h3 class="mt-2">Questions</h3>

        <!-- IMPORTANT #4 Start (questions list MUST have id="questions-list") -->
        <div class="container mt-2" id="questions-list">
          <!-- IMPORTANT #4 End -->

          <!-- Item Design Start -->
          <!--
          <div class="row mt-2">
            <div class="col">
              <div class="form-floating">
                <input
                  type="text"
                  name="questions"
                  id="input-question-n"
                  class="form-control"
                  placeholder="Question"
                />
                <label for="input-question-n" class="form-label"
                  >Question</label
                >
              </div>
              <button class="btn btn-danger remove-question">
                Remove Question
              </button>
            </div>
          </div>
          -->
          <!-- Item Design End -->
        </div>
        <div
          class="container mt-2 d-flex justify-content-center align-items-center"
        >
          <!-- IMPORTANT #5 Start (add question button MUST have id="add-question-btn") -->
          <button id="add-question-btn" class="btn btn-secondary">
            <!-- IMPORTANT #5 End -->
            Add Question
          </button>
        </div>

        <div
          class="container d-flex justify-content-center align-items-center mt-3"
        >
          <!-- IMPORTANT #6 Start (submit button MUST have id="submit-btn") -->
          <button type="button" id="submit-btn" class="btn btn-primary">
            <!-- IMPORTANT #6 End -->
            Create Form
          </button>
        </div>
      </form>
    </main>
  </body>
</html>
