<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <!-- IMPORTANT #1 START -->
    <script src="/auth/js/isValidRefreshToken.js"></script>
    <script src="/auth/js/login.js"></script>
    <!-- IMPORTANT #1 END -->
  </head>
  <body
    class="container vh-100 d-flex justify-content-center align-items-center"
  >
    <main class="container">
      <div class="container w-25">
        <div class="row">
          <div class="col d-flex justify-content-center align-items-center">
            <h1 class="login-title">Log In</h1>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <!-- Form Start -->
            <!-- IMPORTANT #2 START (Login Form must be id="main-form") -->
            <form id="main-form" method="post" action="">
              <!-- IMPORTANT #2 END -->
              <div class="form-floating mt-2">
                <input
                  type="text"
                  placeholder="Username"
                  class="form-control"
                  name="username"
                  id="username-input"
                  required
                />
                <label for="username-input" class="form-label">Username</label>
              </div>
              <div class="form-floating mt-2">
                <input
                  type="password"
                  placeholder="Password"
                  class="form-control"
                  name="password"
                  id="password-input"
                  required
                />
                <label for="password-input" class="form-label">Password</label>
              </div>
              <div
                class="container d-flex justify-content-center align-items-center mt-2"
              >
                <!-- IMPORTANT #3 START (Submit Button MUST be id="submit-btn") -->
                <button id="submit-btn" class="btn btn-primary">Log In</button>
                <!-- IMPORTANT #3 END -->
              </div>
            </form>
            <!-- Form End -->
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
