<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <!-- IMPORTANT #1 START -->
    <script src="/auth/js/getAuthUserInfo.js"></script>
    <script src="/form/js/createResponse.js"></script>
    <!-- IMPORTANT #1 END -->
  </head>
  <body class="container p-5 d-flex justify-content-center align-items-center">
    <main class="container w-50">
      <div class="container">
        <h1>Create Response</h1>
        <!-- IMPORTANT #2 START -->
        <h1 id="event-id" class="d-none"><%= event._id %></h1>
        <h1 id="department-id" class="d-none"><%= department._id %></h1>
        <h1 id="form-id" class="d-none"><%= form._id %></h1>
        <!-- IMPORTANT #2 END -->
      </div>
      <!-- IMPORTANT #3 START (form MUST contain id="main-form") -->
      <form action="" id="main-form" method="post">
        <!-- IMPORTANT #3 END -->
        <div class="form-floating">
          <!-- IMPORTANT #4 START -->
          <input type="hidden" name="eventId" value="<%= event._id %>" />
          <input
            type="hidden"
            name="departmentId"
            value="<%= department._id %>"
          />
          <input type="hidden" name="formId" value="<%= form._id %>" />
          <!-- IMPORTANT #4 END -->
        </div>

        <div class="container mt-2" id="questions-list">
          <!-- Item Design Start -->
          <% form.questions.forEach(question => { %>
          <div class="row mt-2">
            <div class="col">
              <div class="form-floating">
                <input
                  type="number"
                  name="ratings"
                  id="input-question-n"
                  class="form-control rating-input-field"
                  placeholder="Question"
                />
                <label for="input-question-n" class="form-label"
                  ><%= question %></label
                >
              </div>
            </div>
          </div>
          <% }); %>
          <!-- Item Design End -->
        </div>

        <div
          class="container d-flex justify-content-center align-items-center mt-3"
        >
          <!-- IMPORTANT #5 START (submit button MUST contain id="submit-btn") -->
          <button type="button" id="submit-btn" class="btn btn-primary">
            Create Response
          </button>
          <!-- IMPORTANT #5 END -->
        </div>
      </form>
    </main>
  </body>
</html>
