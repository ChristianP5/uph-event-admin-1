<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <!-- IMPORTANT #1 Start -->
    <script src="/auth/js/getAuthUserInfo.js"></script>
    <script src="/form/js/dashboard.js"></script>
    <!-- IMPORTANT #1 End -->
    <title>Document</title>
  </head>
  <body class="container p-5">
    <%- include('../_partials/logout.ejs') %> <%-
    include('../_partials/breadcrumb.ejs') %>
    <h1 id="form-name"><%= form.name %></h1>
    <div class="container">
      <a
        href="/event/<%= event._id %>/department/<%= department._id %>/form/<%= form._id %>/response/new"
        class="btn btn-primary"
        >Add Response</a
      >
      <!-- IMPORTANT #2 Start (Export Button MUST have id="export-response-btn") -->
      <button id="export-response-btn" class="btn btn-success">
        <!-- IMPORTANT #2 End -->
        Export Responses
      </button>
    </div>

    <!-- IMPORTANT #3 Start -->
    <p id="event-id" class="d-none"><%= event._id %></p>
    <p id="department-id" class="d-none"><%= department._id %></p>
    <p id="form-id" class="d-none"><%= form._id %></p>
    <p id="form-name" style="display: none"><%= form.name %></p>
    <!-- IMPORTANT #3 End -->

    <table class="table mt-3">
      <thead>
        <tr>
          <th>Response ID</th>
          <% let questionCount = 0; form.questions.forEach( question => {
          questionCount += 1; %>
          <th>Question <%= questionCount %> Rating</th>
          <% } ) %>
        </tr>
      </thead>
      <tbody>
        <% if(responses.length !== 0){ responses.forEach( response => { %>
        <tr>
          <td><%= response._id %></td>
          <% response.ratings.forEach(rating => { %>
          <td><%= rating %></td>
          <% }) %>
        </tr>
        <% } )} %>
      </tbody>
    </table>
  </body>
</html>
